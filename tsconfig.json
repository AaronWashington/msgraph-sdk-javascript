{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"lib": ["dom", "es7"],
		"declaration": true,
		"outDir": "lib"
	},
	"exclude": ["node_modules", "lib", "samples", "spec/development"],
	"include": ["./src/**/*.ts", "./spec/**/*.ts"]
}
